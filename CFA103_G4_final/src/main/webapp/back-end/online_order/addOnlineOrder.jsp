<body bgcolor='white'>

<table id="table-1">
	<tr><td>
		 <h3>線上訂單資料新增 - addOnlineOrder.jsp</h3></td><td>
		 <h4><a href="select_page_online_order.jsp"><img src="images/tomcat.png" width="100" height="100" border="0">回首頁</a></h4>
	</td></tr>
</table>

<h3>資料新增:</h3>

<%-- 錯誤表列 --%>
<c:if test="${not empty errorMsgs}">
	<font style="color:red">請修正以下錯誤:</font>
	<ul>
		<c:forEach var="message" items="${errorMsgs}">
			<li style="color:red">${message}</li>
		</c:forEach>
	</ul>
</c:if>

<FORM METHOD="post" ACTION="onlineOrder.do" name="form1">
<table>
	<tr>
		<td>員工編號:<font color=red><b>*</b></font></td>
		<td><%= (onlineOrderVO==null)? "1" : onlineOrderVO.getEmpno()%></td>
	</tr>
	<tr>
		<td>會員編號:</td>
		<td><input type="TEXT" name="memno" size="45" 
			 value="<%= (onlineOrderVO==null)? "" : onlineOrderVO.getMemno()%>" /></td>
	</tr>
	<tr>
		<td>結帳狀態:<font color=red><b>*</b></font></td>
		<td><%= (onlineOrderVO==null)? "0" : onlineOrderVO.getPay_status()%></td>
	</tr>
	<tr>
		<td>地址:</td>
		<td><input type="TEXT" name="address" size="45" placeholder="未輸入表示來店外帶"
			 value="<%= (onlineOrderVO==null)? "" : onlineOrderVO.getAddress()%>" /></td>
	</tr>
	<tr>
		<td>取餐/送達時間:</td>
		<td><input name="set_time" id="f_date1" type="text"></td>
	</tr>

	<tr>
		<td>訂單總金額:</td>
		<td><input type="TEXT" name="total" size="45" 
			 value="<%= (onlineOrderVO==null)? "0" : onlineOrderVO.getTotal()%>" /></td>
	</tr>
	<tr>
		<td>付款方式:</td>
		<td><input type="TEXT" name="pay_way" size="45" 
			 value="<%= (onlineOrderVO==null)? "0" : onlineOrderVO.getPay_way()%>" /></td>
	</tr>
	
</table>
<br>
<input type="hidden" name="action" value="insert">
<input type="submit" value="送出訂單"></FORM>
</body>

